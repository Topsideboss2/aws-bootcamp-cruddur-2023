#!/usr/bin/env bash

if [ -z "#1" ]; then
  echo "NO TABLE_NAME argument supplied eg. ./backend-flask/bin/ddb/drop cruddur-messages prod"
  exit
fi

TABLE_NAME=$1

if [ "$2" = "prod" ]; then
  ENDPOINT_URL = ""
else
    ENDPOINT_URL="--endpoint_url=http://localhost:8000"
fi

echo "DELETING TABLE: $TABLE_NAME"

aws dynamodb delete-table $ENDPOINT_URL \
--table_name  $TABLE_NAME\